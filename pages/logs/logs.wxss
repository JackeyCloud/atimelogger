/* pages/logs/logs.wxss */

/* 编辑记录弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
}

.close-btn {
  font-size: 40rpx;
  color: var(--light-text);
  padding: 0 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: var(--light-text);
  margin-bottom: 10rpx;
}

.category-selector {
  margin-top: 10rpx;
  background-color: var(--input-background);
  border-radius: 12rpx;
  padding: 15rpx;
}

.categories-scroll {
  white-space: nowrap;
  width: 100%;
}

.categories-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  padding: 15rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
  position: relative;
  border: 2rpx solid transparent;
}

.category-item.selected {
  background-color: rgba(52, 152, 219, 0.15);
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid var(--primary-color);
}

.category-item:not(.selected):hover {
  background-color: rgba(0, 0, 0, 0.05);
}

.category-icon {
  position: relative;
}

.check-mark {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #2ecc71;
  color: white;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 添加选择指示器 */
.category-selector::before {
  content: "请选择类别";
  display: block;
  font-size: 24rpx;
  color: var(--light-text);
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-color);
  margin-top: 8rpx;
  max-width: 90rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.category-item-hover {
  background-color: rgba(0, 0, 0, 0.05);
}

.current-category {
  display: flex;
  align-items: center;
  padding: 10rpx;
  margin-bottom: 15rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.current-category text {
  font-size: 24rpx;
  color: var(--light-text);
}

.selected-category-indicator {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  background-color: rgba(52, 152, 219, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.selected-category-name {
  font-size: 26rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-left: 8rpx;
}

.mini-category-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 24rpx;
}

.mini-icon-text {
  font-size: 24rpx;
}

/* 优化后的时间选择器样式 */
.enhanced-time-picker {
  display: flex;
  gap: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 10rpx;
}

.time-picker-left, .time-picker-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.picker-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.date-picker-enhanced, .time-picker-enhanced {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.2s ease;
  gap: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.date-picker-enhanced:active, .time-picker-enhanced:active {
  background-color: #f0f8ff;
  border-color: #3498db;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.date-icon, .time-icon {
  font-size: 20rpx;
}

.date-text, .time-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 保持原有样式的兼容性 */
.time-picker-container {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.date-picker, .time-picker {
  background-color: var(--input-background);
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.date-picker {
  width: 58%;
  margin-right: 10rpx;
  position: relative;
}

.date-picker::before {
  content: "日期";
  position: absolute;
  top: -24rpx;
  left: 0;
  font-size: 22rpx;
  color: var(--light-text);
}

.time-picker {
  width: 38%;
  position: relative;
}

.time-picker::before {
  content: "时间";
  position: absolute;
  top: -24rpx;
  left: 0;
  font-size: 22rpx;
  color: var(--light-text);
}

.date-picker:active, .time-picker:active {
  background-color: rgba(52, 152, 219, 0.1);
}

.time-display {
  font-size: 28rpx;
  color: var(--text-color);
  padding: 10rpx 0;
  display: block;
}

.note-input {
  width: 100%;
  height: 160rpx;
  background-color: var(--input-background);
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: var(--text-color);
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid var(--border-color);
}

.delete-btn, .save-btn, .share-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #FFFFFF;
}

.share-btn {
  background-color: #2ecc71;
  color: #FFFFFF;
}

.save-btn {
  background-color: var(--primary-color);
  color: #FFFFFF;
}

.logs-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 搜索和筛选区域样式 */
.search-filter-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  position: relative;
  height: 70rpx;
  background-color: var(--input-background);
  border-radius: 35rpx;
  padding: 0 70rpx 0 30rpx;
  margin-right: 20rpx;
}

.search-input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: var(--text-color);
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--light-text);
}

.clear-icon {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--light-text);
  background-color: #e0e0e0;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.filter-options {
  display: flex;
}

.filter-button {
  height: 70rpx;
  padding: 0 30rpx;
  background-color: var(--card-background);
  border-radius: 35rpx;
  font-size: 28rpx;
  color: var(--text-color);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.filter-button.active {
  background-color: var(--primary-color);
  color: #FFFFFF;
}

.filter-icon {
  margin-left: 10rpx;
  font-size: 20rpx;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #ff4d4f;
  color: #FFFFFF;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
}

/* 筛选面板样式 */
.filter-panel {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  margin-bottom: 20rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.category-filter-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-filter-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: var(--input-background);
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: var(--text-color);
  transition: all 0.3s;
}

.category-filter-item.selected {
  background-color: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

.mini-category-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  color: #FFFFFF;
  font-size: 24rpx;
}

.date-filter-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.date-filter-item {
  padding: 10rpx 20rpx;
  background-color: var(--input-background);
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: var(--text-color);
  transition: all 0.3s;
}

.date-filter-item.selected {
  background-color: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

.custom-date-range {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.date-picker-item {
  flex: 1;
  min-width: 280rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: var(--text-color);
}

.picker-value {
  margin-top: 10rpx;
  padding: 16rpx;
  background-color: var(--input-background);
  border-radius: 8rpx;
  color: var(--text-color);
}

.filter-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.reset-filters-btn, .apply-filters-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.reset-filters-btn {
  background-color: var(--input-background);
  color: var(--text-color);
}

.apply-filters-btn {
  background-color: var(--primary-color);
  color: #FFFFFF;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--light-text);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--light-text);
}

.date-groups {
  width: 100%;
}

.date-group {
  margin-bottom: 30rpx;
}

.date-header {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
}

.day-text {
  font-size: 24rpx;
  color: var(--light-text);
  margin-left: 10rpx;
}

.logs-list {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.log-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.log-item:last-child {
  border-bottom: none;
}

.log-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.category-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 36rpx;
}

.log-details {
  margin-left: 20rpx;
  flex: 1;
}

.log-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  display: block;
}

.log-time {
  font-size: 24rpx;
  color: var(--light-text);
  display: block;
  margin-top: 4rpx;
}

.log-duration {
  font-size: 24rpx;
  color: var(--primary-color);
  display: block;
  margin-top: 4rpx;
}

.log-note {
  font-size: 24rpx;
  color: var(--light-text);
  display: block;
  margin-top: 8rpx;
  background-color: #f9f9f9;
  padding: 6rpx 10rpx;
  border-radius: 6rpx;
}

.log-actions {
  display: flex;
  align-items: center;
}

.action-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.delete {
  background-color: #ff4d4f;
  color: #FFFFFF;
}

.action-icon {
  font-size: 24rpx;
}