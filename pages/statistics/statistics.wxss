/* pages/statistics/statistics.wxss */

.statistics-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.time-range-selector {
  display: flex;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.range-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
}

.range-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.range-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

.chart-type-selector {
  display: flex;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.chart-type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
}

.chart-type-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.chart-type-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

.chart-container {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--light-text);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--light-text);
}

.total-time-card {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-time-label {
  font-size: 28rpx;
  color: var(--light-text);
  margin-bottom: 10rpx;
}

.total-time-value {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-color);
}

.categories-stats {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
}

.category-stat-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.category-stat-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 30rpx;
}

.icon-text {
  font-size: 30rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-details {
  margin-left: 16rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  display: block;
}

.category-duration {
  font-size: 24rpx;
  color: var(--light-text);
  display: block;
  margin-top: 4rpx;
}

.category-percentage {
  display: flex;
  flex-direction: column;
}

.percentage-text {
  font-size: 24rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
  text-align: right;
}

.percentage-bar-container {
  width: 100%;
  height: 12rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.percentage-bar {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}